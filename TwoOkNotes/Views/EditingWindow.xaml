<Window x:Class="TwoOkNotes.Views.EditingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoOkNotes.ViewModels"
        mc:Ignorable="d"
        Title="EditingWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EditingWIndowViewModel />
    </Window.DataContext>

    <DockPanel>
        <StackPanel 
            DockPanel.Dock="Top"
            Orientation="Horizontal"
            Background="Gray">

            <Button 
                Content="Save"
                Command="{Binding SaveNoteCommand}"
                Margin="1"/>

            <Button 
                Content="Delete"
                Command="{Binding DeleteNoteCommand}"
                Margin="1"/>

            <Button 
                Content="Clear"
                Command="{Binding ClearInkCommand}"
                Margin="1"/>

            <Button 
                Content="LoadFile (Remove Later)"
                Command="{Binding LoadNoteCommand}"
                Margin="1"/>

            <Button 
                Content="Undo"
                Command="{Binding UndoCommand}"
                Margin="1"/>

            <Button 
                Content="Redo"
                Command="{Binding RedoCommand}"
                Margin="1"/>

            <Button 
                Content="Pen"
                Command="{Binding ChangePenCommand}"
                Margin="1"/>

        </StackPanel>
        <ContentControl Content="{Binding CurrentCanvasModel}" />
    </DockPanel>
 
</Window>
