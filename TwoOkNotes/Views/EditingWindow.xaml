<Window x:Class="TwoOkNotes.Views.EditingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoOkNotes.ViewModels" 
        xmlns:views="clr-namespace:TwoOkNotes.Views" 
        d:DataContext="{d:DesignInstance Type=local:EditingWIndowViewModel}"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        MouseWheel="Window_MouseWheel"
        Title="{Binding WindowTitle}" 
        Height="1440" 
        Width="2460" >

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions> 
        
        <StackPanel 
            Grid.Row ="0"
            Orientation="Horizontal"
            Background="#1E1E1E">

            <Button 
                Content="Save"
                Command="{Binding SaveNoteCommand}"
                Margin="1"/>

            <Button 
                Content="Delete"
                Command="{Binding DeleteNoteCommand}"
                Margin="1"/>

            <Button 
                Content="Clear"
                Command="{Binding ClearInkCommand}"
                Margin="1"/>

            <Button 
                Content="Undo"
                Command="{Binding UndoCommand}"
                Margin="1"/>

            <Button Content="Toggle Eraser"
                Command="{Binding ToggleEraserCommand}"
                CommandParameter="True"
                Margin="1"/>

            <Button Content="Toggle Pen"
                Command="{Binding ToggleInkCommand}"
                Margin="1"/>

            <Button Content="Toggle Highlighter"
                Command="{Binding ToggleHighlighterCommand}"
                CommandParameter="True"
                Margin="1"/>

            <Button Content="Toggle Select Tool"
                Command="{Binding ToggleSelectionToolCommand}"
                CommandParameter="True"
                Margin="1"/>

            <Button 
                Content="Redo"
                Command="{Binding RedoCommand}"
                Margin="1"/>

            <Button 
                
                Content="Pen"
                Command="{Binding TogglePenSettingsCommand}" 
                Margin="1"/>

            <Button 
                Content="Zoom In" 
                Command="{Binding ZoomInCommand}"
                Margin="1"/>

            <Button 
                Content="Zoom Out" 
                Command="{Binding ZoomOutCommand}"
                Margin="1"/>

        </StackPanel>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#29182f">

                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                

                <Grid Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Grid.Row="0">
                    <ItemsControl ItemsSource="{Binding Sections, Mode = TwoWay}"
                                  Grid.ColumnSpan="2">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel HorizontalAlignment="Center" Margin="10">
                                    <Button Command="{Binding DataContext.SwitchSectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                   CommandParameter="{Binding}"
                   Width="100" 
                   Height="20" 
                   Background="#E6F7FA" 
                   BorderThickness="2" 
                   BorderBrush="#E6F7FA">
                                        <StackPanel>
                                            <TextBlock Text="{Binding}" 
                              FontSize="10" 
                              HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        
                    </ItemsControl>

                </ScrollViewer>
                </Grid>
                <Grid Grid.Row="2">
                    <Button Command="{Binding DataContext.NewSectionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="200"
                    Height="20"
                     VerticalAlignment="Top">
                    <TextBlock Text="New Section" />
                </Button>
                </Grid>
            </Grid>

            <StackPanel Grid.Column="1" Background="#1E1E1E">

                <Grid Grid.Column="1" Background="#29182f">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Pages, Mode = TwoWay}"
                                  Grid.ColumnSpan="2">

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Center" Margin="10">
                                            <Button Command="{Binding DataContext.SwitchPagesCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                   CommandParameter="{Binding}"
                                     Width="100" 
                                     Height="20" 
                                     Background="#E6F7FA" 
                                     BorderThickness="2" 
                                     BorderBrush="#E6F7FA">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding}" 
                                                    FontSize="10" 
                                                    HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </ScrollViewer>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Button Command="{Binding DataContext.NewPageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="200"
                    Height="20"
                     VerticalAlignment="Top">
                            <TextBlock Text="New Page" />
                        </Button>
                    </Grid>
                </Grid>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Grid.Column="2" 
                          Background="#2C2C2C">

                <ContentControl Content="{Binding CurrentCanvasModel}"        
                    Height="10000" 
                    Width="10000"  
                    VerticalAlignment="Top"/>

            </ScrollViewer>

            <views:PenSettings 
               DataContext="{Binding CurrentPenModel}"
               Visibility="{Binding DataContext.IsPenSettingOpen, 
                       RelativeSource={RelativeSource AncestorType=Window}, 
                       Converter={StaticResource BooleanToVisibilityConverter}}"
                 HorizontalAlignment="Right" 
               VerticalAlignment="Top" 
               Width="272" 
               Height="312" 
               Margin="0,0,1978,0"  Grid.Column="1" Grid.ColumnSpan="3" />
        </Grid>

    </Grid>
</Window>