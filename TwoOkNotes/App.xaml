<Application x:Class="TwoOkNotes.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TwoOkNotes" 
             xmlns:converters="clr-namespace:TwoOkNotes.Util"
             xmlns:metro="clr-namespace:MahApps.Metro;assembly=MahApps.Metro" 
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToCollapsedConverter x:Key="BooleanToCollapsedConverter" />
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
            <converters:FileNameConverter x:Key="FileNameConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Themes/LauncherButtonTheme.xaml"/>
                <ResourceDictionary Source="Assets/Themes/LauncherComboBoxTheme.xaml"/>
                <ResourceDictionary Source="Assets/Themes/PenSettingsToggleButtonTheme.xaml"/>
                <ResourceDictionary Source="Assets/Themes/SliderTheme.xaml"/>
                <ResourceDictionary Source="Assets/Themes/CreatedPensRadioButtonTheme.xaml"/>
                <ResourceDictionary Source="Assets/Themes/ColorPickerRadioButtonTheme.xaml"/>
                <ResourceDictionary Source="Assets/Themes/EditingWindowButtons.xaml"/>
                <ResourceDictionary Source="Assets/Themes/SectionsAndPagesButtonThemes.xaml"/>
                <ResourceDictionary Source="Assets/Images/PenIcon.xaml"/> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
